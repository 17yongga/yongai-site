---
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  canonicalURL?: URL;
}

const { 
  title = "YongAI — AI Automation Consulting",
  description = "AI automation consulting for law firms and recruiting agencies. YongAI delivers enterprise-grade AI solutions — from strategic audits to full implementation and ongoing partnership. Based in Toronto.",
  ogImage = "https://yongai.ca/og-image.svg",
  canonicalURL = new URL(Astro.url.pathname, Astro.site)
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />
  
  <!-- Canonical URL -->
  <link rel="canonical" href={canonicalURL} />
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={ogImage} />

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={canonicalURL} />
  <meta property="twitter:title" content={title} />
  <meta property="twitter:description" content={description} />
  <meta property="twitter:image" content={ogImage} />

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
  
  <!-- Favicon (inline SVG data URI) -->
  <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>⚡</text></svg>">
  
  <!-- Calendly -->
  <link href="https://assets.calendly.com/assets/external/widget.css" rel="stylesheet">
  
  <!-- Global CSS (imported via Astro) -->
  
  <!-- Preload critical assets -->
  <link rel="preload" href="https://fonts.gstatic.com/s/inter/v18/UcCO3FwrK3iLTeHuS_fvQtMwCp50KnMw2boKoduKmMEVuLyfAZ9hiJ-Ek-_EeA.woff2" as="font" type="font/woff2" crossorigin>
</head>
<body>
  <slot />
  
  <!-- Calendly popup widget -->
  <script src="https://assets.calendly.com/assets/external/widget.js" async></script>
  
  <!-- GSAP and animations -->
  <script>
    import('../scripts/animations.ts').then(({ initAnimations }) => {
      initAnimations();
    });
  </script>
</body>
</html>

<style is:global>
  html {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }
  
  code {
    font-family: 'JetBrains Mono', Monaco, 'Fira Code', monospace;
  }
</style>